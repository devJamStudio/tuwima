{
  "name": "future-theme",
  "version": "1.0.0",
  "description": "Future WordPress theme build tools with Tailwind CSS",
  "main": "gulpfile.js",
  "scripts": {
    "build": "gulp sass && npm run build:tailwind",
    "build:tailwind": "tailwindcss -i ./scss/tailwind-input.css -o ./build/css/theme/tailwind.css --watch=false",
    "watch": "gulp watch",
    "dev": "gulp default",
    "sass": "gulp sass",
    "tailwind:watch": "tailwindcss -i ./scss/tailwind-input.css -o ./build/css/theme/tailwind.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "browser-sync": "^3.0.2",
    "gulp": "^5.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-connect-php": "^0.0.2",
    "gulp-sass": "^5.1.0",
    "postcss": "^8.4.32",
    "sass": "^1.69.0",
    "tailwindcss": "^3.4.0"
  },
  "keywords": [
    "wordpress",
    "theme",
    "sass",
    "gulp",
    "tailwindcss"
  ],
  "author": "DevJam",
  "license": "GPL-2.0"
}
