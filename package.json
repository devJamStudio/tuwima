{
  "name": "future-theme",
  "version": "2.0.0",
  "description": "Future WordPress theme with Vite + Tailwind CSS 4",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "dev:hmr": "vite --host --force",
    "dev:full": "concurrently \"npm run dev\" \"npm run watch:refresh\"",
    "dev:native": "vite --host --clearScreen false",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "setup": "node setup-proxy.js",
    "watch:refresh": "node watch-refresh.js",
    "sass:watch": "sass --watch scss:css --style=compressed",
    "sass:build": "sass scss:css --style=compressed"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0-alpha.26",
    "autoprefixer": "^10.4.20",
    "chokidar": "^4.0.3",
    "laravel-vite-plugin": "^2.0.1",
    "postcss": "^8.4.47",
    "sass": "^1.80.0",
    "tailwindcss": "^4.0.0-alpha.26",
    "vite": "^7.1.5"
  },
  "keywords": [
    "wordpress",
    "theme",
    "sass",
    "vite",
    "tailwindcss"
  ],
  "author": "DevJam",
  "license": "GPL-2.0"
}
